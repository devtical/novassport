{
    "name": "wearedevtical/novassport",
    "description": "A Laravel Nova tool to manage API Authentication (Passport).",
    "keywords": [
        "laravel",
        "nova",
        "passport",
        "oauth",
        "oauth2",
        "authentication",
        "auth"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0|^7.3",
        "laravel/nova": "^3.0",
        "laravel/passport": "^10.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Devtical\\Novassport\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Devtical\\Novassport\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist.php --allow-risky=yes",
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5"
    }
}
